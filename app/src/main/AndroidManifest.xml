<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.guide">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_USER_PRESENT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name="com.guide.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".guide.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />

        <activity android:name="com.guide.action.ActionDetailActivity" />
        <activity
            android:name="com.guide.deal.DealDetailActivity"
            android:label="特产详情" />
        <activity
            android:name="com.guide.group.GroupDetailActivity"
            android:label="详情" />
        <activity
            android:name="com.guide.group.AddGroupActivity"
            android:label="创建旅游团" />
        <activity
            android:name="com.guide.deal.AddDealActivity"
            android:label="添加新商品" />
        <activity
            android:name=".guide.GuideDetailActivity"
            android:label="个人信息" />
        <activity android:name=".guide.EditGuideActivity" />

        <activity android:name=".guide.RegisterActivity" />
        <activity android:name="com.guide.group.MyScheduleActivity" />
        <activity android:name=".group.GroupQRCodeActivity" />
        <activity android:name=".group.GroupContactsActivity" />
        <activity
            android:name=".group.AddEventActivity"
            android:label="创建行程" />
        <activity android:name=".group.TouristDetailActivity" />

    </application>

</manifest>
