<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="220dp">

    <ImageView
        android:id="@+id/iv_action_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_notification_dialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/action_info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始点名了！"
            android:textColor="@color/black3"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/action_address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="北京市海淀区立方庭"
            android:textColor="@color/black3"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:paddingLeft="27dp"
        android:paddingRight="27dp">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_cornered_grey_stroke_1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_cornered_blue_1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>
