<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="品名"
                        android:textColor="@color/black3"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/gray_horizontal_separator" />

                    <EditText
                        android:id="@+id/deal_name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="17dp"
                        android:background="@color/white"
                        android:hint="请输入产品名称"
                        android:textColor="@color/black3"
                        android:textColorHint="@color/black4"
                        android:textCursorDrawable="@null"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/gray_horizontal_separator" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="类别"
                        android:textColor="@color/black3"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/gray_horizontal_separator" />

                    <TextView
                        android:id="@+id/type_1"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/bg_deal_type"
                        android:gravity="center"
                        android:text="美食"
                        android:textColor="@color/black4" />

                    <TextView
                        android:id="@+id/type_2"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/bg_deal_type"
                        android:gravity="center"
                        android:text="奇货"
                        android:textColor="@color/black4" />

                    <TextView
                        android:id="@+id/type_3"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/bg_deal_type"
                        android:gravity="center"
                        android:text="旅游团"
                        android:textColor="@color/black4" />

                    <TextView
                        android:id="@+id/type_4"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/bg_deal_type"
                        android:gravity="center"
                        android:text="其他"
                        android:textColor="@color/black4" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/gray_horizontal_separator" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="售价"
                        android:textColor="@color/black3"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/gray_horizontal_separator" />

                    <EditText
                        android:id="@+id/deal_price_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="17dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入产品售价"
                        android:textColor="@color/black3"
                        android:textColorHint="@color/black4"
                        android:textCursorDrawable="@null"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="12dp"
                        android:text="元"
                        android:textColor="@color/black3"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/gray_horizontal_separator" />

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="47dp"
                    android:gravity="center_vertical"
                    android:text="详细介绍"
                    android:textColor="@color/black3"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/deal_info_edit"
                android:layout_width="337dp"
                android:layout_height="167dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_cornered_grey_stroke"
                android:gravity="top"
                android:hint="请输入100字以内的商品文字描述..."
                android:padding="10dp"
                android:textColor="@color/black3"
                android:textColorHint="@color/black4"
                android:textCursorDrawable="@null"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:gravity="center_vertical"
                    android:text="照片展示"
                    android:textColor="@color/black3"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_deal_pic_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_deal_pic" />

                    <ImageView
                        android:id="@+id/iv_deal_pic_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:src="@drawable/ic_add_deal_pic"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_deal_pic_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:src="@drawable/ic_add_deal_pic"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_deal_pic_intro" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="每件商品限3张展示照片哦！"
                        android:textColor="@color/black4"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/confirm_btn"
            style="@style/ClickBtnStyleBlue"
            android:layout_width="337dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="27dp"
            android:text="确 定" />

    </LinearLayout>
</ScrollView>