<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.guide.view.AutoScrollViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="267dp" />

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6dp"
                android:padding="2dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/deal_title_txt"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#f8f8f8"
            android:gravity="center_vertical"
            android:lineSpacingExtra="9dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="【天天果园】泰国迷你小菠萝 4个 进口新鲜热带水果 迷你 菠萝"
            android:textColor="@color/black1"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp">

                <TextView
                    android:id="@+id/yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#e74646"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/deal_price_int"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="#e74646"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/deal_price_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".0"
                    android:textColor="#e74646"
                    android:textSize="16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/contact_guide_btn"
                android:layout_width="120dp"
                android:layout_height="37dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/btn_solid_cornered_blue_1"
                android:text="联系导游"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:paddingBottom="33dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="产品简介"
                android:textColor="@color/black1"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/gray_horizontal_separator" />

            <TextView
                android:id="@+id/deal_detail_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:text="【国迷你小菠萝 4个 进口新鲜热带水果 迷你 菠萝【天天果园】泰国迷你小菠萝 4个 进口新鲜热带水果 迷你 菠萝【天天果园】泰国迷你小菠萝 4个 进口新鲜热带水果 迷你 菠萝"
                android:textColor="@color/grey4"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_frame_in_deal" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="28dp"
                    android:lineSpacingExtra="10dp"
                    android:text="如果你喜欢此特产，请联系导游购买！好导游会在后续版本开放在线购买功能，敬请期待哦！ "
                    android:textColor="@color/blue"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>




