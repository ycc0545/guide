<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_back_black" />

        <RelativeLayout
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:layout_marginLeft="23dp">

            <EditText
                android:id="@+id/search_edit"
                android:layout_width="253dp"
                android:layout_height="40dp"
                android:background="@color/grey"
                android:hint="输入关键字"
                android:paddingLeft="3dp"
                android:text=""
                android:textColor="#b4b4b4"
                android:textColorHint="#b4b4b4"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/search_key_layout"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:background="@drawable/bg_cornered_dark_grey"
                android:visibility="gone">

                <TextView
                    android:id="@+id/search_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="新疆大枣"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/search_txt"
                    android:layout_centerVertical="true"
                    android:padding="9dp"
                    android:src="@drawable/ic_delete_txt" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/go_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="搜索"
            android:textColor="@color/black1"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/other_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="其他人都在搜索"
                android:textColor="#787878"
                android:textSize="13sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/hot_deal_layout"
            android:layout_width="287dp"
            android:layout_height="67dp"
            android:layout_marginTop="15dp">

        </RelativeLayout>

    </LinearLayout>

    <com.guide.view.MyListView
        android:id="@+id/find_deal_list"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.guide.view.MyListView>


</LinearLayout>